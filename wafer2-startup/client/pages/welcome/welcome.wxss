/* pages/welcome/welcome.wxss */

.swiper-item {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: flex-end;  
}

.button-box {  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10.5%;     
}

.button-box-1 {  
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 10.5%;     
}

.register-button {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  width: 120px;
  height: 50px;
  margin-left: 33px;
  margin-right: 33px;
  background: #fff;
  border: 1px solid #228ee6;
  box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.24);
  border-radius: 25px;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #228ee6;
  line-height: 16px;
}

.hover-class {
   background-color: rgba(255, 255, 255, 0.8);
}
