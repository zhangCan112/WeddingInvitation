.container {
  display: flex;
  height: 100vh;
  width: 100vw;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.hoop {
  width: 267px;
  height: 263px;  
  animation: App-logo-spin infinite 40s linear;
}

.buttonContainer {
  width: 100vw;
  height: 120px;  
}

.button {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;  
  color: white;  
  width: 120px;
  height: 120px;
  background-image: linear-gradient(-154deg, #e61d39 9%, #ffa88c 99%);
  border-radius: 60px;
  box-shadow: 0 2px 16px 0 rgba(245,0,0,0.50);   
  border-width: 0px;
  margin-top: -190px;   
}

button::after{
border: none;
}

.title {
  font-size: 25px;
  line-height: 26px;
}

@keyframes App-logo-spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}
