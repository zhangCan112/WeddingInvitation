/* client/pages/bless/bless.wxss */

.container {
  background-image: url(https://weddinginvitation-1257005404.cos.ap-beijing.myqcloud.com/WechatIMG721.jpeg);
  background-repeat: repeat-y;
  background-size:contain;
  height: 100vh;
  display:  flex;
  flex-direction: column;
  align-items: center;
}


.areaContainer {
  display:  flex;
  flex-direction: row;
  width: 100vw;  
}

.blessArea {
  margin: 10px;
  border: 1px solid #8fa1b2;          
  flex: 1;
  border-radius: 5px;
  min-height: 200px;
}

.switchButton {
  align-self: flex-end;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  margin-right: 30px;
  color: red;
}

.cell {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100vw;
  min-height: 50px;  
}

.title {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color:  #475059;
  letter-spacing: 0;
  width: 100px;
  margin-left: 34rpx;
}

.input {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #475059;
  letter-spacing: 0;
  text-align: right;
  flex: 1;
  margin-right: 20px;
  min-width: 50vw;
}

.placeholder-class {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #9B9B9B;
  letter-spacing: 0;
  text-align: right;
}

.sep-line {
  background: #e1e8ed;
  margin-left: 34rpx;
  width: 100%;
  height: 2rpx;
}

.blessButton {
  margin-top: 10px;
  background: #2393FF;
  color: #FFFFFF;
}