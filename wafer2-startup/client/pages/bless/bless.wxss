/* client/pages/bless/bless.wxss */

.container {
  background: #fffff9;  
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image {
  width: 100vw;
}

.areaContainer {
  display: flex;
  flex-direction: row;
  width: 100vw;
}

.blessArea {
  margin-left: 15px;
  margin-right: 15px;
  flex: 1;
  opacity: 0.7;
  background: #fff;
  border: 1px solid #66a6ba;
  border-radius: 8px;
  min-height: 140px;
}

.switchButton {
  align-self: flex-end;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  margin-right: 30px;
  color: red;
}

.cell {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100vw;
  min-height: 50px;
}

.title {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #475059;
  letter-spacing: 0;
  width: 100px;
  margin-left: 34rpx;
}

.input {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #475059;
  letter-spacing: 0;
  text-align: right;
  flex: 1;
  margin-right: 20px;
  min-width: 50vw;
}

.placeholder-class {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #9b9b9b;
  letter-spacing: 0;
  text-align: right;
}

.sep-line {
  background: #e1e8ed;
  margin-left: 34rpx;
  width: 100%;
  height: 2rpx;
}

.blessButton {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10px;
  background: #f25764;
  border-radius: 8px;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff;
  text-align: center;
  line-height: 16px;
  width: 200px;
  height: 36px;
}
